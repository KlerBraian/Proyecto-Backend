{{!-- //ESTRUCTURA DEL VIEW HOME --}}

<main>
    <h1 class="titulo" id="titulo">Bienvenidos a home</h1>   
    <a href="/api/carts/{{cartId}}">Ir al carrito</a>
    <div class="productos-grilla">
    {{#each products}}
    <div class="producto">
        <h3 class="producto-title">{{title}}</h3>
        <img src={{thumbnail}} alt="{{_id}}">
        <p class="producto-price">${{price}}</p>
        <p class="producto-categoria">Categoria: {{category}}</p>
        <p class="producto-description">{{description}}</p>
        <p class="producto-stock">Unidades disponibles: {{stock}}</p>
        <a href="/products/{{_id}}" class="producto-detalles">Ver detalles</a>
    </div>
    {{/each}}
      </div>
</main>