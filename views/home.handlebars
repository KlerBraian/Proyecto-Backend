{{!-- //ESTRUCTURA DEL VIEW HOME --}}


    <h1>Productos</h1>
    {{#if cartId }}
    <a href="/api/carts/{{cartId}}">Ir al carrito</a>
    {{/if}}
    {{#if products.length}}
        <div class="productos-grilla">
            {{#each products}}
                <div class="producto">
                    <h3 class="producto-title">{{this.title}}</h3>
                    <img src="{{this.thumbnail}}" alt="">
                    <p class="producto-price">Precio: ${{this.price}}</p>
                    <p class="producto-categoria">Categoría: {{this.category}}</p>
                    <p class="producto-description">Descripción: {{this.description}}</p>
                      <p class="producto-stock">Unidades disponibles: {{stock}}</p>
        <a href="/products/{{_id}}" class="producto-detalles">Ver detalles</a>   
                </div>
            {{/each}}
        </div>

        <!-- Paginación -->
        <div class="pagination">
            {{#if hasPrevPage}}
                <a href="/?limit={{limit}}&page={{prevPage}}&query={{query}}&sort={{sort}}">Página Anterior</a>
            {{/if}}
            
            {{#if hasNextPage}}
                <a href="/?limit={{limit}}&page={{nextPage}}&query={{query}}&sort={{sort}}">Página Siguiente</a>
            {{/if}}

            <p>Página {{currentPage}} de {{totalPages}}</p>
        </div>
    {{else}}
        <p>No hay productos disponibles.</p>
    {{/if}}
</body>
</html>
