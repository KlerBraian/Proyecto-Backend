<main>
    <h1 class="titulo" id="titulo">Carrito de Compras</h1>
    <a href="/">Volver</a>

    {{#if products.length}}
    <div class="productos-grilla">
        {{#each products}}
            <div class="producto">
                <h3 class="producto-title">{{product.title}}</h3>
                <img src="{{product.thumbnail}}" alt="">
                <p class="producto-price">${{product.price}}</p>
                <p class="producto-categoria">Categor√≠a: {{product.category}}</p>
                <p class="producto-description">{{product.description}}</p>
                <p class="producto-stock">Unidades disponibles: {{product.stock}}</p>
              <form action="/api/carts/{{cartId}}product/{{product._id}}" method="POST" class="modificar-al-carrito-form">
    <label for="quantity">Modificar cantidad:</label>
    <input type="number" name="quantity" id="quantity" placeholder="Cantidad" min="1" required>
    <button type="submit">Modificar</button>
</form>

            </div>
        {{/each}}
    </div>
    {{else}}
        <p>No hay productos en el carrito.</p>
    {{/if}}
</main>
